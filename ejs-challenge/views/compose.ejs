<%- include("partials/header"); %> 
<h1>Compose</h1>

<form action="/compose" method="POST">
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="postTitle" class="form-control">
    </div>
    <div class="form-group">
        <label>Post</label>
        <textarea name="postBody" class="form-control" rows=5 cols=30></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>

